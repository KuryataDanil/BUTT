<section class="min-h-screen w-full bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center px-4">
  <div class="bg-gray-800 rounded-lg shadow-lg p-8 w-full max-w-2xl">
    <h1 class="text-3xl text-white font-bold text-center mb-8">Редактирование пространства</h1>

    <%= form_with model: @space, local: true do |f| %>
      <div class="mb-6">
        <%= f.label :name, "Название пространства", class: "block text-white text-sm font-medium mb-2" %>
        <%= f.text_field :name, placeholder: "Введите название",
                         class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-brand-green focus:ring-1 focus:ring-brand-green outline-none transition" %>
      </div>

      <div class="mb-6">
        <%= f.label :description, "Описание", class: "block text-white text-sm font-medium mb-2" %>
        <%= f.text_area :description, placeholder: "Добавьте описание",
                        class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-brand-green focus:ring-1 focus:ring-brand-green outline-none transition" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <%= f.label :opening_time, "Время открытия", class: "block text-white text-sm font-medium mb-2" %>
          <%= f.time_field :opening_time,
                           class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-brand-green focus:ring-1 focus:ring-brand-green outline-none transition" %>
        </div>

        <div>
          <%= f.label :closing_time, "Время закрытия", class: "block text-white text-sm font-medium mb-2" %>
          <%= f.time_field :closing_time,
                           class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-brand-green focus:ring-1 focus:ring-brand-green outline-none transition" %>
        </div>
      </div>

      <!-- Секция редактирования мест -->
      <div class="bg-gray-700 p-6 rounded-lg mb-6">
        <h2 class="text-2xl font-bold text-white mb-4">Редактировать места</h2>

        <div id="spots-container" class="space-y-4">
          <%= f.fields_for :spots do |spot_form| %>
            <div class="flex flex-col md:flex-row gap-4 items-center bg-gray-800 p-4 rounded-lg">
              <div class="flex-1">
                <%= spot_form.label :num, "Номер места", class: "block text-sm font-medium text-white mb-2" %>
                <%= spot_form.number_field :num, min: 1, class: "w-full px-4 py-3 border rounded-md focus:ring-2 focus:ring-brand-green" %>
              </div>

              <div class="flex-1">
                <%= spot_form.label :price, "Цена", class: "block text-sm font-medium text-white mb-2" %>
                <%= spot_form.number_field :price, min: 0, step: 0.1, class: "w-full px-4 py-3 border rounded-md focus:ring-2 focus:ring-brand-green" %>
              </div>


              <%= spot_form.hidden_field :_destroy %>

              <div class="pt-6">
                <button type="button" onclick="removeSpotEdit(this)" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                  Удалить
                </button>
              </div>
            </div>
          <% end %>
        </div>

        <div class="flex justify-end mt-4">
          <button type="button" onclick="addSpot()" class="px-6 py-3 bg-brand-green text-gray-800 font-bold rounded-lg hover:scale-105 transition-transform">
            Добавить место
          </button>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row sm:justify-between items-center gap-4">
        <%= f.submit "Сохранить изменения", class: "w-full sm:w-auto px-8 py-4 bg-brand-green text-gray-900 font-bold rounded-lg hover:scale-105 transition-transform" %>
        <%= link_to "Отмена", space_path(@space), class: "w-full sm:w-auto px-8 py-4 border border-brand-green text-brand-green font-semibold rounded-lg hover:scale-105 transition-transform" %>
      </div>
  <% end %>
  </div>
</section>


