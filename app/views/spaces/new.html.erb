<section class="min-h-screen w-full bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center px-4">
  <div class="bg-gray-800 rounded-lg shadow-lg p-8 w-full max-w-2xl">
    <h1 class="text-4xl text-white font-bold mb-8 text-center">Создание нового пространства</h1>

    <%= form_with model: Space.new, url: spaces_path, method: :post, local: true do |form| %>
      <div class="mb-6">
        <%= form.label :name, "Название пространства", class: "block text-sm font-medium text-white mb-2" %>
        <%= form.text_field :name, placeholder: "Введите название", class: "w-full px-4 py-3 border rounded-md focus:ring-2 focus:ring-brand-green" %>
      </div>

      <div class="mb-6">
        <%= form.label :description, "Описание", class: "block text-sm font-medium text-white mb-2" %>
        <%= form.text_area :description, placeholder: "Опишите пространство",
                           class: "w-full px-4 py-3 border rounded-md focus:ring-2 focus:ring-brand-green" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <%= form.label :opening_time, "Время открытия", class: "block text-sm font-medium text-white mb-2" %>
          <%= form.time_field :opening_time, class: "w-full px-4 py-3 border rounded-md focus:ring-2 focus:ring-brand-green" %>
        </div>
        <div>
          <%= form.label :closing_time, "Время закрытия", class: "block text-sm font-medium text-white mb-2" %>
          <%= form.time_field :closing_time, class: "w-full px-4 py-3 border rounded-md focus:ring-2 focus:ring-brand-green" %>
        </div>
      </div>

      <div class="flex justify-between items-center">
        <%= form.submit "Создать пространство",
                        class: "px-8 py-4 bg-brand-green text-gray-800 font-bold rounded-lg hover:scale-105 transition-transform" %>
        <%= link_to "Отмена", spaces_path,
                    class: "px-8 py-4 border-2 border-brand-green text-brand-green font-bold rounded-lg hover:scale-105 transition-transform" %>
      </div>
    <% end %>
  </div>
</section>



