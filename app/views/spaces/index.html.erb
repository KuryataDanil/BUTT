<section class="min-h-screen w-full bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center px-4">
  <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-4xl">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900">Доступные Пространства</h1>
      <%= link_to "Создать новое пространство", new_space_path,
                  class: "px-6 py-3 bg-brand-green text-gray-900 font-bold rounded-lg hover:scale-105 transition-transform" %>
    </div>

    <% if @spaces.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @spaces.each do |space| %>
          <div class="bg-gray-50 rounded-lg shadow p-6 hover:shadow-xl transition-shadow">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2"><%= space.name %></h2>
            <p class="text-gray-700 mb-4"><%= space.description %></p>
            <%= link_to "Подробнее", space_path(space),
                        class: "inline-block px-6 py-2 bg-brand-green text-white font-medium rounded-lg hover:scale-105 transition-transform" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center text-gray-600 text-lg">Нет доступных пространств.</p>
    <% end %>
  </div>
</section>



