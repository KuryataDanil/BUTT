<h1>Your Bookings</h1>

<% @bookings.each do |booking| %>
  <div>
    <p>Space: <%= booking.space.name %></p>
    <p>Start Time: <%= booking.start_time %></p>
    <p>End Time: <%= booking.end_time %></p>
    <p>Status: <%= booking.status %></p>
    <p>Price: <%= booking.price %></p>
    <%= link_to "Cancel", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } if booking.status == "active" %>
  </div>
<% end %>
