<section class="min-h-screen w-full bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center px-4">
<div class="text-white bg-gray-800 rounded-lg shadow-lg p-8 w-full max-w-md">
  <%= form_with url: "/register", method: :post, local: true do |f| %>
    <h1 class="text-3xl font-bold text-center mb-8">Create Account</h1>

    <div class="mb-6">
      <%= f.label :username, class: "block text-sm font-medium mb-2" %>
      <%= f.text_field :username, placeholder: "Choose a username",
                       class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      <%#= error_message_for @user, :username, class: "mt-1 text-sm text-red-600" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, class: "block text-sm font-medium mb-2" %>
      <%= f.email_field :email, placeholder: "Enter your email",
                        class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      <%#= error_message_for @user, :email, class: "mt-1 text-sm text-red-600" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :password, placeholder: "Create a password",
                           class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      <%#= error_message_for @user, :password, class: "mt-1 text-sm text-red-600" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm your password",
                           class: "w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      <%#= error_message_for @user, :password_confirmation, class: "mt-1 text-sm text-red-600" %>
    </div>

    <%= f.submit "Sign Up", class: "w-full inline-block px-8 py-4 border-2 border-brand-green text-brand-green font-bold rounded-lg hover:scale-105 transition-transform" %>
  <% end %>
</div>
</section>

